<?xml version="1.0" encoding="utf-8"?>
<xs:schema attributeFormDefault="unqualified" 
           elementFormDefault="qualified" 
           xmlns:xs="http://www.w3.org/2001/XMLSchema" 
           targetNamespace ="http://mysample.local.de/fuhrpark2">
  <xs:element name="fuhrpark">
    <xs:complexType>
      <xs:sequence>
        <xs:element maxOccurs="unbounded" name="fahrzeug">
          <xs:complexType>
            <xs:sequence>
              <xs:element name="kennzeichen" type="xs:string" />
              <xs:element name="hersteller" type="xs:string" />
              <xs:element name="ladung">
                <xs:complexType>
                  <xs:simpleContent>
                    <xs:extension base="xs:string">
                      <xs:attribute name="menge" type="xs:unsignedShort" use="required" />
                    </xs:extension>
                  </xs:simpleContent>
                </xs:complexType>
              </xs:element>
            </xs:sequence>
          </xs:complexType>
        </xs:element>
      </xs:sequence>
    </xs:complexType>
  </xs:element>
</xs:schema>