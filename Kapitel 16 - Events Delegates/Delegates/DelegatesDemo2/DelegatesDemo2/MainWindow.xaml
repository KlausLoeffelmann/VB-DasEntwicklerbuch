<Window x:Class="MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Delegates Demo" Height="381" Width="569" 
        MinWidth="410" MinHeight="220">
    <Grid Name="MainGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="50" />
        </Grid.RowDefinitions>
        <Viewbox Name="CanvasContainerViewbox" Stretch="UniformToFill">
            <Canvas Height="400" Name="MalbereichCanvas" Width="700"/>
        </Viewbox>
        <CheckBox Content="Abgerundete Ecken" Grid.Row="1" Height="16" 
                  HorizontalAlignment="Left" VerticalAlignment="Center" 
                  Margin="20,0,0,0" Name="AbgerundeteEckenCheckBox"/>
        <Button Content="Figuren malen" Grid.Row="1" Height="30" 
                HorizontalAlignment="Center" Name="DrawButton" VerticalAlignment="Center" Width="90" />
    </Grid>
</Window>
