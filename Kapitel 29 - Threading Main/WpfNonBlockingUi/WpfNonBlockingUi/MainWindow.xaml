<Window x:Class="MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="120" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="50" />
            <RowDefinition Height="*" />
            <RowDefinition Height="25" />
            <RowDefinition Height="40" />
            <RowDefinition Height="*" />
            <RowDefinition Height="40" />
        </Grid.RowDefinitions>
        <TextBlock Name="HeadlineTextblock" Text="Non-Blocking User Interface Demo" 
                   Grid.ColumnSpan="2" VerticalAlignment="Center" HorizontalAlignment="Center"
                   FontSize="24"/>
        <Label Content="Fortschritt:" Grid.Row="1" Name="Label1" Grid.ColumnSpan="2"
               VerticalAlignment="Bottom" HorizontalAlignment="Center"/>
        <ProgressBar Grid.Row="2" Name="MainProgress" Grid.ColumnSpan="2" 
                     Margin="10,0"/>
        <Button Content="Start Working!" Grid.ColumnSpan="2"
                Grid.Row="3" Name="StartWorkingButton" Width="120" Height="25"/>
        <Button Content="OK" Grid.Column="1" Grid.Row="5" Name="OkButton" Margin="4,4,4,4" />
    </Grid>
</Window>
